# root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120

[*.java]
max_line_length = 150
indent_style = space
indent_size = 4
tab_width = 4

[*.gradle]
indent_style = tab
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
indent_style = space
